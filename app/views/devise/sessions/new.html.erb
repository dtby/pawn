<div class="bg-page">
<div class="col-md-3 col-md-offset-8 form-login">
  <div class="col-md-12 login-row">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :用户名 %><br />
        <%= f.email_field :username, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :密码 %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="remember col-md-6">
          <%= f.check_box :remember_me %>
          <%= f.label :记住密码 %>
        </div>
      <% end %>
      <div class="actions col-md-6">
        <%= link_to "登录", root_path, class:"btn btn-info pull-right btn-login" %>
        <%#= f.submit "登录", class:"btn btn-info pull-right btn-login" %>
      </div>
    <% end %>
      <div class="text-center">
        <p class="sign-in-text" ><%= link_to "忘记密码", '#' %>&nbsp;|&nbsp;<%= link_to "免费注册", new_user_registration_path %></p>
      </div>
  </div>
</div>
</div>
<%#= render "devise/shared/links" %>
